{% extends '::base.html.twig' %}

{% block body -%}
    <div class="container">
        <h1>User</h1>

        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Surname</th>
                    <td>{{ entity.surname }}</td>
                </tr>
                <tr>
                    <th>Street</th>
                    <td>{{ entity.street }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ entity.city }}</td>
                </tr>
            </tbody>
        </table>

        <ul class="record_actions">
            <li>
                <a href="{{ path('user') }}">
                    Back to the list
                </a>
            </li>
            <li>
                <a href="{{ path('user_edit', { 'id': entity.id }) }}">
                    Edit
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>
    </div>
{% endblock %}
